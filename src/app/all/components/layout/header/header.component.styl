.b-header
  background #333
  color #FFFFFF
  display flex
  height 70px
  justify-content space-between
  padding 0 10px
  transition top 300ms ease
  width 100%
  &_column
    display flex
  &__title
    border-left 1px solid #717171
    color #aacade
    display inline-block
    font-size 16px
    padding 0 0 0 10px
    vertical-align middle

.b-header-logo
  align-items center
  display flex
  &__title
    border-left 1px solid #50565a
    font-size 16px
    margin 0 0 0 10px
    padding 0 0 0 10px
  &_message
    left 50%
    opacity 0
    position absolute
    text-align center
    top 53%
    transform scale(1.1) translate(-50%, -50%)
    transition all 300ms ease-out
    width 100%
    &__text
      color #dee4ec
      display block
  &_swap
    padding 10px
    position relative
    &__image
      transition all 300ms ease-out
      vertical-align middle
    &__icon-arrow
      margin 0 0 0 10px
      transition all 300ms ease-out

.b-header-menu
  color #FFF
  display flex
  height 100%
  padding 0
  &_item
    list-style none
  &_link
    align-items center
    color #ffffff
    display flex
    height 100%
    padding 0 15px
    transition all 300ms ease-out
    &:hover
      background #292929
    &__name
      display inline-block
      margin 0 5px 0 0
      vertical-align middle
    &__image
      display inline-block
      vertical-align middle

:host /deep/ .g-icon
  fill white
  font-size 18px
  &-down_arrow
    font-size 11px
    margin 0 15px 0 0
  &-logout
    margin 0 5px 0 0