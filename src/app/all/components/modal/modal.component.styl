.g-modal-overlay
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(0, 0, 0, 0.5)
  z-index 999

.g-modal
  color #444444
  z-index 1000
  position fixed
  right 0
  left 0
  top 20px
  margin-right auto
  margin-left auto
  width 90%
  max-width 600px
  max-height 600px
  background-color #fff
  box-sizing content-box
  padding 15px 10px 20px 10px
  box-shadow 0 7px 8px -4px rgba(0, 0, 0, 0.2), 0 13px 19px 2px rgba(0, 0, 0, 0.14), 0 5px 24px 4px rgba(0, 0, 0, 0.12)

:host /deep/ .g-modal
  &_title
    color #565656
    font-size 22px
    margin 0 0 15px
    padding 10px 20px
    text-align center
  &_description
    padding-left 20px
    padding-right 20px
    text-align center
  &_button-box
    padding 10px 0
    text-align center
    .g-btn
      font-size 17px
      margin-right 35px
      min-width 110px
      &:last-child
        margin-right 0
    .g-btn-confirm
      background #045584
      box-shadow 0 2px 5px 0 #999
    .g-btn-cancel
      background #3798cf
      border 0
      border-radius 4px
      box-shadow 0 2px 5px 0 #999
      color #fff
      line-height 36px

@media (min-width: 768px)
  .g-modal
    top 20%

